#!/bin/bash

# Update package information and install Nginx

# Create a new configuration file for the redirection
sudo bash -c 'cat > /etc/nginx/conf.d/redirect.conf <<EOF
server {
    listen 80;
    server_name your_domain_name.com;

    location /redirect_me {
        return 301 http://new_url.com;
    }
}
EOF'

# Test the Nginx configuration file for syntax errors
sudo nginx -t

# Reload the Nginx configuration to apply the changes
sudo systemctl reload nginx

